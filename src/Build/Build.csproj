<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>library</OutputType>
    <AssemblyName>Coding4Fun.Sql.Build</AssemblyName>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet information -->
    <PackageId>Coding4Fun.Sql.Build</PackageId>
    <Version>1.0.0</Version>
    <Authors>Artem</Authors>
    <Company>Coding4Fun</Company>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="Microsoft.SqlServer.DacFx" />
    <PackageReference Include="Microsoft.Build.Tasks.Core" />
    <PackageReference Include="StringTemplate4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Common\*.cs">
      <LinkBase>Common\</LinkBase>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Include="msbuild/tools/*.*" Pack="true" PackagePath="tools" />
    <None Include="msbuild/build/*.*" Pack="true" PackagePath="build" />
    <None Include="msbuild/buildMultiTargeting/*.*" Pack="true" PackagePath="buildMultiTargeting" />

    <None Include="$(OutputPath)/$(AssemblyName).dll" Pack="true" PackagePath="tools/net8.0" />
  </ItemGroup>

</Project>